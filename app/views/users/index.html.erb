<table>
	<tr>
		<td>name</td>
		<td>email</td>
		<td>password</td>
	</tr>
	<%@users.each do |user|%>
	<tr>
		<td><%=link_to user.name, user_path(user.id)%></td>
		<td><%=user.email %></td>
		<td><%=user.password %></td>
		<td><%=link_to "edit user", edit_user_path(user.id)%></td>
		<td><%=button_to "delete user", user, confirm:"Do you really want to delete this user?", method: :delete%></td>
	</tr>
	<% end %>
</table>

<%=link_to "new user", new_user_path%>
