<%=form_for(@event) do |f| %>
	<div class="field">
		<p>Event Name</p>
		<%=f.text_field :event_name%>
	</div>
	<div class="field">
		<p>Event Date</p>
		<%=f.text_field :event_date%>
	</div>
	<div class="field">
		<p>End of Voting Time</p>
		<%=f.text_field :vote_end_time%>
	</div>
	<div class="field">
		<%=f.hidden_field :creator_id, :value=>current_user.id%>
	</div>

	<div class="actions">
		<%=f.submit %>
	</div>
<% end %>